# Run the container with `docker run -p 3000:3000 -t ideas-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system ideas-api && \
          adduser --system -G ideas-api ideas-api

COPY dist/apps/ideas-api ideas-api/
RUN chown -R ideas-api:ideas-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix ideas-api --omit=dev -f install

CMD [ "node", "ideas-api" ]
